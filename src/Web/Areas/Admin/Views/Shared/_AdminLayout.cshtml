@using Web.Helpers.Extensions
<!DOCTYPE>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <link href="@Url.ContentWithVersion("~/Content/admin.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    @RenderSection("Head", required: false)
</head>
<body>
    <div>
        <div id="navigation-container">
            <div id="logo">
                <span>Dashboard</span>
            </div>
            <div id="navigation">
                <ul>
                    <li>@Html.ActionLink("Users", "summary", new { area = "admin", controller = "usermanagement" })</li>
                    <li>@Html.ActionLink("Blog", "summary", new { area = "admin", controller = "blogmanagement" })</li>
                    <li>@Html.ActionLink("Tasks", "summary", new { area = "admin", controller = "taskmanagement" }, new { id = "sign-out" })</li>
                    <li>@Html.ActionLink("Elmah", "Index", new { area = "Admin", controller = "Elmah" })</li>
                    <li>@Html.ActionLink("Sign Out", "index", new { area = "", controller = "home" }, new { id = "sign-out" })</li>
                </ul>
            </div>
        </div>
        @RenderBody()
    </div>
</body>
</html>
